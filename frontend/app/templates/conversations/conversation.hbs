<div class="ui relaxed list" id="messages-grid" style="height: 90%; padding: 10px; margin-bottom: 0px; overflow-y:scroll">
	{{#each msg in model.messages}}
		{{#message-bubble message=msg}}{{/message-bubble}}
	{{/each}}
</div>

<div class="ui grid" style="height: 10%; margin: 0px;">
	<div class="row" style="height: 100%; padding: 0px">
		<div class="sixteen wide column" style="padding: 0px; height: 100%">
				<div class="ui form"  style="height: 100%">
					<div class="ui left icon input" style="height: 100%">
						{{input action="send_message" class="ui input full-height" value=message_text placeholder="Write a message..."}}
						<i class="blue mail icon"/>						
					</div>
				</div>
		</div>
	</div>
</div>